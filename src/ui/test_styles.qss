/* QMainWindow */
QMainWindow {
    background: #23272e;
    border: 2px solid #4b4b4b;
}

/* QMenuBar, QMenu */
QMenuBar {
    background: #23272e;
    color: #fff;
}
QMenuBar::item {
    background: transparent;
    color: #fff;
    padding: 4px 12px;
}
QMenuBar::item:selected {
    background: #7a7aff;
}
QMenu {
    background: #23272e;
    color: #fff;
    border: 1px solid #5a5a5a;
}
QMenu::item:selected {
    background: #7a7aff;
}

/* QLabel */
QLabel {
    color: #e0e0e0;
    font-size: 14px;
    font-weight: bold;
    background: transparent;
    border: none;
}

/* QPushButton */
QPushButton {
    background: #3a3f4b;
    color: #fff;
    border: 1px solid #5a5a5a;
    border-radius: 6px;
    padding: 6px 18px;
    font-size: 14px;
}
QPushButton:hover {
    background: #50576b;
}
QPushButton:pressed {
    background: #2a2f3b;
}
QPushButton:disabled {
    background: #888;
    color: #ccc;
}

/* QLineEdit */
QLineEdit {
    background: #23272e;
    color: #fff;
    border: 1px solid #5a5a5a;
    border-radius: 4px;
    padding: 5px;
    font-size: 14px;
}
QLineEdit:focus {
    border: 1px solid #7a7aff;
}

/* QCheckBox */
QCheckBox {
    color: #fff;
    font-size: 14px;
}
QCheckBox::indicator {
    width: 18px; height: 18px;
    border-radius: 4px;
    border: 1px solid #aaa;
    background: #444;
}
QCheckBox::indicator:checked {
    background: #7a7aff;
    border: 1px solid #7a7aff;
}
QCheckBox::indicator:unchecked {
    background: #23272e;
}

/* QRadioButton */
QRadioButton {
    color: #fff;
    font-size: 14px;
}
QRadioButton::indicator {
    width: 18px; height: 18px;
    border-radius: 9px;
    border: 1px solid #aaa;
    background: #444;
}
QRadioButton::indicator:checked {
    background: #7a7aff;
    border: 1px solid #7a7aff;
}
QRadioButton::indicator:unchecked {
    background: #23272e;
}

/* QComboBox */
QComboBox {
    background: #23272e;
    color: #fff;
    border: 1px solid #5a5a5a;
    border-radius: 4px;
    padding: 4px 24px 4px 8px;
    font-size: 14px;
}
QComboBox::drop-down {
    border: none;
    background: #3a3f4b;
}
QComboBox QAbstractItemView {
    background: #23272e;
    color: #fff;
    selection-background-color: #7a7aff;
    selection-color: #fff;
}

/* QSlider */
QSlider::groove:horizontal {
    border: 1px solid #444;
    height: 8px;
    background: #23272e;
    border-radius: 4px;
}
QSlider::handle:horizontal {
    background: #7a7aff;
    border: 1px solid #444;
    width: 18px;
    margin: -5px 0;
    border-radius: 9px;
}

/* QScrollBar */
QScrollBar:vertical {
    background: #23272e;
    width: 14px;
    margin: 0px;
}
QScrollBar::handle:vertical {
    background: #7a7aff;
    min-height: 24px;
    border-radius: 7px;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

/* QProgressBar */
QProgressBar {
    background: #23272e;
    border: 1px solid #5a5a5a;
    border-radius: 4px;
    text-align: center;
    color: #fff;
}
QProgressBar::chunk {
    background: #7a7aff;
    border-radius: 4px;
}

/* QTabWidget/QTabBar */
QTabWidget::pane {
    border: 1px solid #5a5a5a;
    background: #23272e;
}
QTabBar::tab {
    background: #3a3f4b;
    color: #fff;
    border: 1px solid #5a5a5a;
    border-bottom: none;
    border-radius: 4px 4px 0 0;
    padding: 6px 18px;
    font-size: 14px;
}
QTabBar::tab:selected {
    background: #7a7aff;
    color: #fff;
}
QTabBar::tab:!selected {
    background: #3a3f4b;
    color: #aaa;
}

/* QTableWidget/QHeaderView */
QTableWidget {
    background: #23272e;
    color: #fff;
    gridline-color: #5a5a5a;
    font-size: 14px;
}
QHeaderView::section {
    background: #3a3f4b;
    color: #fff;
    border: 1px solid #5a5a5a;
    padding: 4px;
}
QTableWidget::item:selected {
    background: #7a7aff;
    color: #fff;
}

/* QListWidget */
QListWidget {
    background: #23272e;
    color: #fff;
    font-size: 14px;
}
QListWidget::item:selected {
    background: #7a7aff;
    color: #fff;
}

/* QFrame */
QFrame {
    background: #3a3f4b;
    border: 1px solid #5a5a5a;
    border-radius: 4px;
}

/* QSplitter */
QSplitter::handle {
    background: #7a7aff;
    width: 4px;
}

/* QToolBar, QToolButton */
QToolBar {
    background: #23272e;
    border: none;
    spacing: 6px;
    padding: 6px;
}
QToolButton {
    background: #3a3f4b;
    color: #fff;
    border: 1px solid #5a5a5a;
    border-radius: 4px;
    padding: 6px 12px;
}
QToolButton:checked {
    background: #7a7aff;
}
QToolButton:hover {
    background: #50576b;
}

/* QStatusBar */
QStatusBar {
    background: #23272e;
    color: #fff;
    border-top: 1px solid #5a5a5a;
}
QStatusBar QLabel {
    color: #fff;
}

/* QGroupBox */
QGroupBox {
    border: 1px solid #7a7aff;
    border-radius: 6px;
    margin-top: 6px;
    color: #fff;
    font-size: 14px;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 6px;
}

/* QDialog, QMessageBox, QFileDialog, QColorDialog, QFontDialog, QInputDialog */
QDialog, QMessageBox, QFileDialog, QColorDialog, QFontDialog, QInputDialog {
    background: #23272e;
    color: #fff;
    border: 2px solid #7a7aff;
    border-radius: 8px;
    font-size: 14px;
}
QDialog QLabel, QMessageBox QLabel, QFileDialog QLabel, QColorDialog QLabel, QFontDialog QLabel, QInputDialog QLabel {
    color: #fff;
}
QDialog QPushButton, QMessageBox QPushButton, QFileDialog QPushButton, QColorDialog QPushButton, QFontDialog QPushButton, QInputDialog QPushButton {
    background: #7a7aff;
    color: #fff;
    border-radius: 4px;
    padding: 6px 18px;
}
QDialog QPushButton:hover, QMessageBox QPushButton:hover, QFileDialog QPushButton:hover, QColorDialog QPushButton:hover, QFontDialog QPushButton:hover, QInputDialog QPushButton:hover {
    background: #50576b;
}
